        "module": "esnext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "typings",
        "emitDeclarationOnly": true,
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "lib/**/*",
        "dist/**/*"
    ]
}