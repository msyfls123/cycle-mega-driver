{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "lib",
        "emitDeclarationOnly": true,
        "allowJs": true,
        "skipLibCheck": true,
        "paths": {
            "cycle-mega-driver": ["."],
            "cycle-mega-driver/*": ["./*"],
        },
        "lib": [
            "ES2017",
            "ES2019",
            "DOM",
            "DOM.Iterable",
            "ES2018.Promise"
        ],
    },
    "include": [
        "src/**/*",
        "lib/**/*",
        "node_modules/**/*"
    ],
    "exclude": [
        "dist/**/*",
        "lib/**/*",
        "node_modules"
    ]
}
