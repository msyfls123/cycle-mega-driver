{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "typings",
        "emitDeclarationOnly": true,
        "allowJs": true,
        "paths": {
            "cycle-mega-driver": ["."]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "lib/**/*",
        "dist/**/*"
    ]
}
